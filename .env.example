# Environment configuration
# Copy this to .env and customize for your environment

# Timezone (see: https://www.php.net/manual/en/timezones.php)
TZ=America/New_York

# UniFi Controller Configuration
# IMPORTANT: Use a LOCAL admin account WITHOUT 2FA
# - SSO/Cloud accounts are NOT supported
# - 2FA must be DISABLED for this account
# - Create a dedicated local-only admin (no remote access) for security
# - Guide: https://help.spotipo.com/en/articles/11623978-add-local-admin-to-unifi-controller
UNIFI_USER=your_local_admin_username
UNIFI_PASSWORD=your_password_here
UNIFI_URL=https://192.168.1.1:8443
UNIFI_VERSION=9.5.21

# Debug mode (true/false)
DEBUG_MODE=false

# LED Schedule
# These times control BOTH when the script checks AND when cron runs
# Cron will automatically run at these times + hourly safety checks
# Format: HH:MM:SS (24-hour format)
# Examples: 06:00:00 (6 AM), 14:30:00 (2:30 PM), 22:00:00 (10 PM)
LED_OFF_TIME=22:00:00
LED_ON_TIME=06:00:00

# Sites to Control (comma-separated list, or leave empty for all sites)
# Examples:
#   UNIFI_SITES=default           (single site)
#   UNIFI_SITES=default,office,home  (multiple sites)
#   UNIFI_SITES=                  (empty = all sites)
UNIFI_SITES=default

# AP MAC Addresses to Control (comma-separated list, or leave empty for all APs)
# Use the MAC addresses of specific access points you want to control
# Examples:
#   AP_MACS=aa:bb:cc:dd:ee:ff                          (single AP)
#   AP_MACS=aa:bb:cc:dd:ee:ff,11:22:33:44:55:66       (multiple APs)
#   AP_MACS=                                           (empty = all APs in the site)
# To find MAC addresses, check your UniFi Controller or run the script with DEBUG_MODE=true
AP_MACS=

